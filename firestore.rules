rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function chatParticipant(chatId) {
      return isSignedIn()
        && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }

    // Users can read public profile data but can only write their own record.
    match /users/{uid} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(uid);
    }

    // Chat metadata can only be read/written by participants.
    match /chats/{chatId} {
      allow read: if chatParticipant(chatId);
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if chatParticipant(chatId);

      // Messages are restricted to chat participants.
      match /messages/{messageId} {
        allow read: if chatParticipant(chatId);
        allow create: if chatParticipant(chatId)
          && request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}
